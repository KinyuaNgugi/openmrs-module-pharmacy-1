<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.pharmacy">

	<class name="Pharmacy"
		   table="pharmacy_pharmacy">
		<id name="id" type="int" column="myDrugId" unsaved-value="0">
			<generator class="native" />
		</id>
		<discriminator column="id" insert="false" />
		<property name="id" type="java.lang.String" column="myDrugId"
				  length="38" unique="true" />
		<property name="brandName" type="java.lang.String" column="brandName"
				  length="255" unique="true" />
		<property name="genericName" type="java.lang.String" column="genericName"
				  length="255" unique="true" />
		<property name="description" type="java.lang.String"
				  column="description" length="255" />
		<property name="unitsInStock" type="java.lang.String" column="unitsInStock"
				  length="255" unique="true" />
		<property name="pricePerUnit" type="java.lang.String" column="pricePerUnot"
				  length="255" unique="true" />
	</class>

</hibernate-mapping>
